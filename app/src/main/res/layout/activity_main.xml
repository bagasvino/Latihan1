<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btAndi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="60dp"
        android:text="Andi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btBagas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Bagas"
        app:layout_constraintStart_toEndOf="@+id/btAndi"
        app:layout_constraintTop_toBottomOf="@+id/btAndi"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btSaddad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Saddad"
        app:layout_constraintStart_toStartOf="@+id/btBagas"
        app:layout_constraintTop_toBottomOf="@+id/btBagas"
        tools:ignore="HardcodedText" />

    <Button
        android:id="@+id/btAli"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Ali"
        app:layout_constraintStart_toStartOf="@+id/btSaddad"
        app:layout_constraintTop_toBottomOf="@+id/btSaddad"
        tools:ignore="HardcodedText" />
</androidx.constraintlayout.widget.ConstraintLayout>